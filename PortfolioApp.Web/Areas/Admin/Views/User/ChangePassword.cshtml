@model UserPasswordDto

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="ChangePassword" method="post">

    <div class="alert alert-danger">
        <b>Uyarı</b> Şifreniz değiştirildikten sonra otomatik olarak çıkış yaptırılacak
    </div>


    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Password">Password
            <span asp-validation-for="Password" class="text-danger"></span>
        </label>
        <input asp-for="Password" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-succes btn-sm">Update</button>
    </div>

</form>
