@model EducationAddDto

@{
    ViewData["Title"] = "Insert Education";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string group = "form-group";
    string control = "form-control";
}

<form asp-action="Insert" method="post">

    <div class="@group">
        <label asp-for="Title">
            Title
            <span asp-validation-for="Title"></span>
        </label>
        <input asp-for="Title" class="@control" />
    </div>

    <div class="@group">
        <label asp-for="SubTitle">
            SubTitle
            <span asp-validation-for="SubTitle"></span>
        </label>
        <input asp-for="SubTitle" class="@control" />
    </div>

        <div class="@group">
        <label asp-for="Description">
            SubTitle
            <span asp-validation-for="Description"></span>
        </label>
        <textarea asp-for="Description" class="@control" rows="5" cols="5"></textarea>
    </div>

    <div class="@group">
        <label asp-for="Grade">
            Grade
            <span asp-validation-for="Grade"></span>
        </label>
        <input asp-for="Grade" class="@control" />
    </div>

    <div class="@group">
        <label asp-for="StartDate">
            Start Date
            <span asp-validation-for="StartDate"></span>
        </label>
        <input asp-for="StartDate" class="@control" type="date" />
    </div>

    <div class="@group">
        <label asp-for="EndDate">
            End Date
            <span asp-validation-for="EndDate"></span>
        </label>
        <input asp-for="EndDate" class="@control" type="date" />
        <span><em>Devam ediyorsanız doldurmanıza gerek yoktur.</em></span>
    </div>

    <div class="@group">
        <button type="submit" class="btn btn-success btn-sm">Education Insert</button>
    </div>

</form>